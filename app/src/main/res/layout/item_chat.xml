<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"> <androidx.cardview.widget.CardView
    android:id="@+id/cardAvatar"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_centerVertical="true"
    app:cardCornerRadius="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@android:drawable/sym_def_app_icon" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardAvatar"
        android:layout_marginStart="16dp"
        android:text="Nome Contatto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="12:30"
        android:textSize="12sp"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContactName"
        android:layout_toEndOf="@id/cardAvatar"
        android:layout_toStartOf="@id/tvTimestamp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Ultimo messaggio..."
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#666666" />

</RelativeLayout>