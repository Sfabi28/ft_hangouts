<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp">

    <TextView
        android:id="@+id/tvMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/bubble_received"
        android:padding="12dp"
        android:text="Messaggio ricevuto"
        android:textColor="#000000"
        android:textSize="16sp"

        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tvMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:31"
        android:textSize="10sp"
        android:textColor="#808080"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvMessageBody"
        app:layout_constraintStart_toStartOf="@id/tvMessageBody" />

</androidx.constraintlayout.widget.ConstraintLayout>